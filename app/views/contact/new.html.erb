<div class="page-header">
  <h1><span class="icon-envelope"></span> Contact us</h1>
</div>

<% if flash[:notice] %>
  <p class="alert alert-success"><%= flash[:notice] %></p>
<% end %>
<% if flash[:error] %>
  <p class="alert alert-error"><%= flash[:error] %></p>
<% end %>

<%= form_for @message, :html => {:class => "form-horizontal"}, :url => contact_path do |form| %>
<fieldset>
  <div class="control-group">
    <label class="control-label" for="input01"><%= form.label :name %></label>
    <div class="controls">
     <%= form.text_field :name, :class => "input-xlarge" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input01"><%= form.label :email %></label>
    <div class="controls">
     <%= form.text_field :email, :class => "input-xlarge" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input01"><%= form.label :subject %></label>
    <div class="controls">
     <%= form.text_field :subject, :class => "input-xlarge" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="textarea"><%= form.label :body %></label>
    <div class="controls">
      <%= form.text_area :body, :class => "input-xlarge", :rows => "10" %>
    </div>
  </div>
  <div class="form-actions">
    <%= form.submit "Send", :class => "btn btn-primary" %>
  </div>
</fieldset>
  <% end %>